#!/bin/bash
set -euo pipefail
fn=${1?"need file name"}
if [ ${fn##*.} = "c" ]; then
  is_c=1
  CC=gcc
else
  CC=g++
fi

if [ "$(uname -s)" = "Darwin" ]; then
  CC=$CC-11
fi

ARGS=''
DEBUG=0
if [ $# = 1 ] || [ $2 = true ] || [ $2 = 1 ]; then
  DEBUG=1
  ARGS="${ARGS:+$ARGS }-DDEBUG"
  # if ! [[ "$ARGS" =~ "-O" ]]; then
  #     ARGS="${ARGS:+$ARGS }-Og"
  # fi
fi
if [ $# -ge 3 ]; then
  ARGS="${ARGS:+$ARGS }$(echo $* | cut -d ' ' -f 3-)"
fi
if ! [[ "$ARGS" =~ "-std=" ]]; then
  if [ -n $is_c ]; then
    std="c11"
  else
    std="c++17"
  fi
  ARGS="${ARGS:+$ARGS }-std=$std"
fi

file_name="$(sha1sum "$1" | awk '{print $1}')-$(echo $ARGS | sha1sum | awk '{print $1}').out"
dir='/tmp/run_c'
mkdir -p $dir
file="$dir/$file_name"

>&2 echo \$ARGS=\'"$ARGS"\'
>&2 echo $file
if [ -e "$file" ]; then
  time >&2 echo "cached file exist!"
else
  set -eux
  time $CC $ARGS -Wall -Wextra -Wshadow \
    -Wconversion "$fn" -o "$file" \
    # -fsanitize=address -fsanitize=undefined
fi
>&2 echo 
time "$file"
