#!/usr/bin/env bash
set -euo pipefail
fn=${1?"need file name"}
o=${2:-2}

if [ "${fn##*.}" = "c" ]; then
  is_c=1
  CC=gcc
else
  is_c=0
  CC=g++
fi

ARGS=()

if [ "$(uname -s)" = "Darwin" ]; then
  ARGS+=("-Wl,-ld_classic")
  export HISTFILE=/dev/null
  TCC="$(printf ' exit; %s-1\t' "$CC" | bash -i 2>&1 | tr ' ' '\n' | grep "$CC")"
  if command -v "$TCC" &> /dev/null; then
    CC="$TCC"
  fi
fi

case $o in
3)
  ARGS+=("-fsanitize=address" "-fsanitize=undefined")
  ;&
2)
  ARGS+=("-DDEBUG" "-g")
  ;&
1)
  ARGS+=("-D_GLIBCXX_DEBUG" "-D_GLIBCXX_DEBUG_PEDANTIC")
  ;&
esac

OPT=""
if [ $# -ge 3 ]; then
  OPT="$(echo "$*" | cut -d ' ' -f 3-)"
fi

if ! [[ "$OPT" =~ "-std=" ]]; then
  if [ $is_c = 1 ]; then
    std="gnu11"
  else
    std="c++20"
  fi
  ARGS+=("-std=$std")
fi

ARGSs="${ARGS[*]} $OPT"

file_name="$(sha1sum "$1" | awk '{print $1}')-$(echo "$ARGSs" | sha1sum | awk '{print $1}').out"
dir='/tmp/run_c'
mkdir -p $dir
file="$dir/$file_name"

>&2 echo \$ARGS=\'"$ARGSs"\'
>&2 echo "$file"
if [ -e "$file" ]; then
  time >&2 echo "cached file exist!"
else
  set -eux
  # shellcheck disable=SC2086
  time $CC $ARGSs -Wall -Wextra -Wshadow \
    -Wconversion "$fn" -o "$file"
fi
>&2 echo 
time "$file"
