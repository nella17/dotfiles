#!/bin/bash
set -euo pipefail
fn=${1?"need file name"}
if [ ${fn##*.} = "c" ]; then
  is_c=1
  CC=gcc
else
  is_c=0
  CC=g++
fi

if [ "$(uname -s)" = "Darwin" ]; then
  if command -v $CC-11 &> /dev/null; then
    CC=$CC-11
  fi
fi

ARGS=()
DEBUG=0
if [ ${2:-1} -ge 1 ]; then
  DEBUG=1
  ARGS+=("-DDEBUG" "-D_GLIBCXX_DEBUG" "-D_GLIBCXX_DEBUG_PEDANTIC" "-D_GLIBCXX_DEBUG_PEDANTIC_ASSERT")
fi
if [ ${2:-0} -ge 2 ]; then
  ARGS+=("-fsanitize=address" "-fsanitize=undefined")
fi

OPT=""
if [ $# -ge 3 ]; then
  OPT="$(echo $* | cut -d ' ' -f 3-)"
fi

if ! [[ "$OPT" =~ "-std=" ]]; then
  if [ -z $is_c ]; then
    std="c11"
  else
    std="c++17"
  fi
  ARGS+=("-std=$std")
fi

ARGS="${ARGS[*]} $OPT"

file_name="$(sha1sum "$1" | awk '{print $1}')-$(echo "$ARGS" | sha1sum | awk '{print $1}').out"
dir='/tmp/run_c'
mkdir -p $dir
file="$dir/$file_name"

>&2 echo \$ARGS=\'"$ARGS"\'
>&2 echo $file
if [ -e "$file" ]; then
  time >&2 echo "cached file exist!"
else
  set -eux
  time $CC $ARGS -Wall -Wextra -Wshadow \
    -Wconversion "$fn" -o "$file"
fi
>&2 echo 
time "$file"
